<!-- Validation failure messages -->
<% if @country.errors.any? %>
  <% @country.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit your status for <%= @country.name %></h3>
</div>

<div class="row">
  <div class="col-md-12">

    <form action="/update_country/<%= @country.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">



      <!-- Label and input for name -->

      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <%= @country.name %>

      </div>



      <!-- Label and input for visitstatus -->

      <div class="form-group">
        <label for="visitstatus" class="control-label">
          Visit Status
        </label>

        <select id="visitstatus" name="visitstatus">
          <option value="Visited"> Already visited the country </option>
            <option value="Wishlist" > Want to visit </option>
        </select>

      </div>



      <!-- Label and input for notes -->

      <div class="form-group">
        <label for="notes" class="control-label">
          Notes
        </label>

        <textarea id="notes" name="notes" placeholder="Notes" class="form-control" rows="3"><%= @country.notes %></textarea>

      </div>


      <button class="btn btn-warning">
        Update country status in travel log
      </button>
      or

      <a href="/countries">Cancel</a>


    </form>

  </div>
</div>
