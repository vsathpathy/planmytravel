<a href="/countries/new" class="btn pull-right btn-success">Add a country to your list</a>
<br>

<div class="row">
<div class="col-md-12">
<table class="table table-striped table-hover">
<tr>

  <th>Country Name</th>

  <th>Visit Status</th>

  <th>Notes</th>

  <th>Actions</th>
</tr>

<% @countries.each do |country| %>
<tr>

  <td><%= country.name %></td>
  <td><%= country.visitstatus %></td>
  <td><%= country.notes %></td>

  <td>

    <a href="/countries/<%= country.id %>/edit" class="btn btn-default">Edit</a>
    <a href="/delete_country/<%= country.id %>" class="btn btn-default" rel="nofollow">Delete</a>

  </td>
</tr>
<% end %>
</table>
</div>
</div>
